{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist/typings",
        "moduleResolution": "node",
        "diagnostics": true,
        "outDir": "dist",
        "lib": [ "es6", "es5", "dom" ] 
    },
    "files": [
        "./src/lib/Lib.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],

    "exclude": [
        "node_modules",
        "gltf-sample-models",
        "dist",
        "build",
        "coverage"
    ]
}
